@page
@model IndexModel
@{
    ViewData["Title"] = "ProblemCenter";
}

@if (Model.UserSigned)
{
    <div>
        <label style="margin-left: 45%; font-size: 24px">Список задач</label>
        <div class="card-group offset-lg-12 col justify-content-center">
            @foreach (var problem in Model.Problems)
            {
                <div class="col-md-5" style="margin: 1%">
                    <div class="card">
                        <div class="card-body">
                            <p>
                                <label>Номер задачи: @problem.Id</label>
                            </p>
                            <p>
                                <label>Статус: @problem.Status?.Name</label>
                            </p>
                            <p>
                                <label>Работник: @problem.Worker?.Name</label>
                            </p>
                            <p>
                                <label>Приоритет: @problem.Priority?.Name</label>
                            </p>
                            <p>
                                <label>Создана: @problem.CreatedTime.ToString("d")</label>
                            </p>
                            @if (problem.EndTime != null)
                            {
                                <p>
                                    <label>Решена: @problem.EndTime?.ToString("d")</label>
                                </p>
                            }
                            @* done *@
                            @if (problem.StatusId == 5)
                            {
                                <p>
                                    <label>Версия с решением: @problem.Version</label>
                                </p>
                                <div class="accordion">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header" id=@String.Concat("heading_sol", problem.Id.ToString())>
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target=@String.Concat("#collapse_sol", problem.Id.ToString()) aria-expanded="true" aria-controls=@String.Concat("collapse_sol", problem.Id.ToString())>
                                                Показать Решение
                                            </button>
                                        </h2>
                                        <div id=@String.Concat("collapse_sol", problem.Id.ToString()) class="accordion-collapse collapse" aria-labelledby=@String.Concat("heading_sol", problem.Id.ToString()) data-bs-parent="#accordionExample">
                                            <div class="accordion-body">
                                                <p>
                                                    <label style="white-space: pre-line;">@(problem.Solution ?? "Нет решения")</label>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="accordion">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id=@String.Concat("heading", problem.Id.ToString())>
                                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target=@String.Concat("#collapse", problem.Id.ToString()) aria-expanded="true" aria-controls=@String.Concat("collapse", problem.Id.ToString())>
                                            Показать описание
                                        </button>
                                    </h2>
                                    <div id=@String.Concat("collapse", problem.Id.ToString()) class="accordion-collapse collapse" aria-labelledby=@String.Concat("heading", problem.Id.ToString()) data-bs-parent="#accordionExample">
                                        <div class="accordion-body">
                                            <p>
                                                <label style="white-space: pre-line;">@problem.Description</label>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
@* auth form *@
else
{
    <div class="col-lg-8 offset-lg-4 col justify-content-center top-50">
        <label style="color: red">@Model.Error</label>
        <form class="col-md-6" method="post">
            <p>
                <label class="form-label">Логин</label>
            </p>
            <p>
                <input type="text" class="form-control" asp-for="Login"/>
            </p>
            <p>
                <label class="form-label">Пароль</label>
            </p>
            <p>
                <input type="password" class="form-control" asp-for="Password"/>
            </p>
            <button class="btn btn-primary form-control">Войти</button>
        </form>
    </div>
}