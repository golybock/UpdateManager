@page
@model TimeTableSite.Pages.Timetable.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Редактирование</h1>

<h4>Штатное расписание</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Timetable.Id" />
            <div class="form-group">
                <label class="control-label">Номер документа</label>
                <input min="0" asp-for="Timetable.DocumentNumber" class="form-control" />
                <span asp-validation-for="Timetable.DocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Дата создания</label>
                <input  type="date" disabled="disabled" asp-for="Timetable.CreatedDate" class="form-control" />
                <span asp-validation-for="Timetable.CreatedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Главный бухгалтер</label>
                <input asp-for="Timetable.ChiefAccountant" class="form-control" />
                <span asp-validation-for="Timetable.ChiefAccountant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Период</label>
                <select asp-for="Timetable.PeriodId" class="form-control" asp-items="ViewBag.PeriodId"></select>
                <span asp-validation-for="Timetable.PeriodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Управляющий</label>
                <select asp-for="Timetable.SupervisorId" class="form-control" asp-items="ViewBag.SupervisorId"></select>
                <span asp-validation-for="Timetable.SupervisorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад</a>
</div>

