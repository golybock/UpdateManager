<Page x:Class="TaskWorkerApp.Pages.SolutionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      Title="SolutionPage">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBox Margin="5" ui:ControlHelper.Header="Решение задачи:" Name="SolutionTextBox" TextWrapping="Wrap" Height="200"></TextBox>
            <TextBox Margin="5" ui:ControlHelper.Header="Версия:" Name="VersionTextBox" TextWrapping="Wrap" Height="30"></TextBox>
            <Button Width="150" Content="Отправить" HorizontalAlignment="Left" Margin="5" Name="SendButton" Click="SendButton_OnClick"></Button>
        </StackPanel>
    </Grid>
</Page>
